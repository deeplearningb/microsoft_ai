    "img = cv2.imread('image02.jpeg')\n",
    "org_img = img.copy()\n",
    "\n",
    "bright_diff = 50\n",
    "img_brighten = cv2.convertScaleAbs(img, alpha=1, beta=bright_diff)\n",
    "\n",
    "cv2.imshow(\"org\", org_img)\n",
    "cv2.imshow(\"brighten\", img_brighten)\n",
    "cv2.waitKey()"
